@article{
Tabatabaei2024,
author = {Sahand Tabatabaei  and Pritam Priyadarsi  and Namanish Singh  and Pardis Sahafi  and Daniel Tay  and Andrew Jordan  and Raffi Budakian },
title = {Large-enhancement nanoscale dynamic nuclear polarization near a silicon nanowire surface},
journal = {Science Advances},
volume = {10},
