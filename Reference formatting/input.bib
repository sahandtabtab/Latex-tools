abstract = {Abstract EPR spectroscopy of diamagnetic bio-macromolecules is based on site-directed spin labeling (SDSL). Herein, a novel labeling strategy for proteins is presented. A nitroxide-based spin label has been developed and synthesized that can be ligated to proteins by an inverse-electron-demand Diels–Alder (DAinv) cycloaddition to genetically encoded noncanonical amino acids. The nitroxide moiety is shielded by a photoremovable protecting group with an attached tetra(ethylene glycol) unit to achieve water solubility. SDSL is demonstrated on two model proteins with the photoactivatable nitroxide for DAinv reaction (PaNDA) label. The strategy features high reaction rates, combined with high selectivity, and the possibility to deprotect the nitroxide in Escherichia coli lysate.},
year = {2019}
}

@article{Fleck2021,
author = {Fleck, Nico and Heubach, Caspar and Hett, Tobias and Spicher, Sebastian and Grimme, Stefan and Schiemann, Olav},
title = {Ox-SLIM: Synthesis of and Site-Specific Labelling with a Highly Hydrophilic Trityl Spin Label},
journal = {Chemistry – A European Journal},
volume = {27},
number = {16},
pages = {5292-5297},
keywords = {biophysical chemistry, electron paramagnetic resonance, pulsed dipolar spectroscopy, spin labelling, trityl radicals},
